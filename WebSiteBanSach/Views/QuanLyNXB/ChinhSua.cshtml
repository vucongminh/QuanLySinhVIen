@model WebSiteBanSach.Models.NhaXuatBan

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <strong class="card-title" style="margin-left:20px; font-size:30px; color:aqua;">CHỈNH SỬA NXB</strong>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.MaNXB, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
            <div class="col-md-10">
                <span style="font-size:15pt;margin-left:5px;color:blue">@Model.MaNXB</span>
                @Html.Hidden("MaNXB", Model.MaNXB)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenNXB, htmlAttributes: new { @class = "control-label col-md-2" , @style = "font-weight:bold; margin-right: 20px" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNXB)
                @Html.ValidationMessageFor(model => model.TenNXB)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" , @style = "font-weight:bold; margin-right: 20px" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi)
                @Html.ValidationMessageFor(model => model.DiaChi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "control-label col-md-2" , @style = "font-weight:bold; margin-right: 20px" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienThoai)
                @Html.ValidationMessageFor(model => model.DienThoai)
            </div>
        </div>

        <br />

        <div class="form-actions no-color">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" style="background-color:greenyellow" /> |


                <a href="@Url.Action("HienThi", "QuanLyNXB", new { @MaSach = Model.MaNXB })" class="btn btn-default" style="background-color:forestgreen; width:64px">  Chi Tiết  </a> |

                <a href="@Url.Action("Index","QuanLyNXB")" class="btn btn-default" style="background-color:plum ">Quay Lại</a>

            </div>
        </div>

    </div>
}

